/*
  Contains global variables, mixins, etc used in
  later style sheets
*/

vendor(prop, args)
  -webkit-{prop}: args
  -moz-{prop}: args
  {prop}: args

border-radius()
  vendor('border-radius', arguments)

box-shadow()
  vendor('box-shadow', arguments)

centerVertically()
  position: relative
  top: 50%
  vendor('transform', translateY(-50%))
  
centerHorizontally(width)
  width: width
  margin-left: auto
  margin-right: auto

$grayDark = rgb(150, 150, 150)
$grayMiddleDark = rgb(200, 200, 200)
$gray = rgb(215, 215, 215)
$grayMiddleLight = rgb(223, 223, 223)
$grayLight = rgb(232, 232, 232)
$grayVeryLight = rgb(245, 245, 245)
background-color = $grayVeryLight
header-background-color = $grayLight
footer-background-color = $grayLight
