@require '../../node_modules/normalize.css/normalize.css'

*,
*:before,
*:after {
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
}

centerVertically() {
  position: relative;
  top: 50%;
  -webkit-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  transform: translateY(-50%);
}

columnize(width) {
  display: inline-block;
  vertical-align: top;
  width: width;
}

hide() {
  display: none;
}

.col-1-1 {
  columnize(100%);
}

.col-1-2 {
  columnize(50%);
}

.col-1-4 {
  columnize(25%);
}

.vertical-center {
  centerVertically()
}

.horizontal-center {
  margin:auto;
  display:block;
}

