
bar-height = 6%;

.page {
  columnize(100%);
  height: 100%;
  background-color: background-color;
  .box {
    height: (100% - bar-height * 2);
    background-color: white;
    .inner-text-area {
      width: 100%;
      height: 100%;
      border: none;
      font-size: 1.2em;
      font-weight: 300;
      overflow: auto;
    }
  }
  .bar {
    height: bar-height;
    columnize(100%);
    background-color: white;
    input {
      border: none;
      width: 100%;
      height: 100%;
      text-align:center;
    }
  }
}
