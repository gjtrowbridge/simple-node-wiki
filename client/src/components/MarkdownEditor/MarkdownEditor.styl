
.markdown-editor
  height: 550px
  & > .box
    height: 100%
    border: solid 3px $gray
    border-radius(5px)
    margin: auto
    &.display-box-view-mode
      width: 65%
      display: block
    &.box-edit-mode
      vertical-align: middle
      display: inline-block
      width: 49%
      &.edit-box
        margin-right: 1%
      &.display-box
        margin-left: 1%