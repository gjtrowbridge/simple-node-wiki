
.edit-box {
  columnize(50%);
  height: 100%;
  background-color: white;
  border: solid 4px gray;
  border-right: solid 2px gray;
  
  .edit-box-text-container {
    columnize(90%);
  }
  
  .edit-box-toggle-container {
    height: 100%;
    columnize(10%);
  }
  
  &.edit-box-collapsed {
    columnize(10%);
    .edit-box-text-container {
      hide();
    }
    .edit-box-toggle-container {
      columnize(100%);
    }
  }


}

