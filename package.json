{
  "name": "basic-wiki",
  "version": "0.0.0",
  "description": "A basic wiki",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build-css && npm run build-react",
    "watch": "npm run watch-css & npm run watch-react & nodemon server",
    "build-css": "stylus --include-css client/src/ --out client/public/assets/styles",
    "build-react": "browserify client/src/main.js > client/public/assets/js/bundle.js",
    "watch-react": "watchify client/src/main.js -o client/public/assets/js/bundle.js",
    "postinstall": "npm run build"
  },
  "keywords": [
    "wiki"
  ],
  "author": "Greg Trowbridge",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.12.3",
    "browserify": "^9.0.8",
    "express": "^4.12.3",
    "q": "^1.2.1",
    "react": "^0.13.2",
    "react-router": "^0.13.2",
    "sequelize": "^2.1.0",
    "sqlite3": "^3.0.5"
  },
  "devDependencies": {
    "browserify": "^9.0.8",
    "watchify": "^3.2.1"
  }
}
