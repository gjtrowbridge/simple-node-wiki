{
  "name": "basic-wiki",
  "version": "0.0.0",
  "description": "A basic wiki",
  "main": "server.js",
  "scripts": {
    "build": "npm run build-css & npm run build-js",
    "build-css": "stylus --include-css client/src/ --out client/public/assets/styles",
    "build-js": "browserify -t [reactify --es6] client/src/main.jsx > client/public/assets/js/bundle.js",
    "migrate-database": "sequelize db:migrate",
    "postinstall": "npm run build & npm run migrate-database",
    "start": "node server.js",
    "test-frontend": "jest",
    "test": "tape shared/**/*_test.js | faucet || :",
    "test:watch": "watch 'npm run test'",
    "watch": "npm run watch-css & npm run watch-js & nodemon server",
    "watch-css": "stylus -w --include-css client/src/ --out client/public/assets/styles",
    "watch-js": "watchify -t [reactify --es6 --harmony] client/src/main.jsx -o client/public/assets/js/bundle.js"
  },
  "keywords": [
    "wiki"
  ],
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": ["<rootDir>/node_modules/react"]
  },
  "author": "Greg Trowbridge",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.12.3",
    "express": "^4.12.3",
    "flux": "^2.0.3",
    "highlight.js": "^8.6.0",
    "jquery": "^2.1.4",
    "keymirror": "^0.1.1",
    "marked": "^0.3.3",
    "normalize.css": "^3.0.3",
    "object-assign": "^3.0.0",
    "q": "^1.2.1",
    "react": "^0.13.2",
    "react-router": "^0.13.3",
    "request-promise": "^0.4.3",
    "sequelize": "^3.0.0",
    "sqlite3": "^3.0.5",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "babel-jest": "^5.3.0",
    "browserify": "^9.0.8",
    "faucet": "0.0.1",
    "jest-cli": "0.4.x",
    "nodemon": "^1.3.7",
    "reactify": "^1.1.1",
    "sequelize-cli": "^1.7.0",
    "stylus": "^0.51.1",
    "tape": "^4.0.0",
    "watch": "^0.16.0",
    "watchify": "^3.2.1"
  }
}
