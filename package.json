{
  "name": "basic-wiki",
  "version": "0.0.0",
  "description": "A basic wiki",
  "main": "server.js",
  "scripts": {
    "build": "npm run build-css & npm run build-js",
    "build-css": "stylus --include-css client/src/ --out client/public/assets/styles",
    "build-js": "browserify client/src/main.js > client/public/assets/js/bundle.js",
    "migrate-database": "sequelize db:migrate",
    "postinstall": "npm run build & npm run migrate-database",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm run watch-css & npm run watch-js & nodemon server",
    "watch-css": "stylus -w --include-css client/src/ --out client/public/assets/styles",
    "watch-js": "watchify client/src/main.js -o client/public/assets/js/bundle.js"
  },
  "keywords": [
    "wiki"
  ],
  "author": "Greg Trowbridge",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.12.3",
    "browserify": "^9.0.8",
    "express": "^4.12.3",
    "jquery": "^2.1.4",
    "marked": "^0.3.3",
    "normalize.css": "^3.0.3",
    "q": "^1.2.1",
    "react": "^0.13.2",
    "react-router": "^0.13.2",
    "sequelize": "^3.0.0",
    "sqlite3": "^3.0.5",
    "stylus": "^0.51.1"
  },
  "devDependencies": {
    "sequelize-cli": "^1.7.0",
    "watchify": "^3.2.1"
  }
}
